@{
    Layout = null;
}

@model WMS_BE.Models.LabelDTO
<!DOCTYPE html>
<html>
<head>
    <style type="text/css">
        body {
            font-family: Arial, Helvetica, sans-serif;
        }

        @*@page {
          size: 5cm 5cm;
        }*@

        .txt_bold{
            font-weight:bold;
        }

    </style>
</head>

<body>
    <table width='100%' style="margin-left:-35px;margin-top:-25px;margin-bottom:5px;">
        <tbody>
            <tr>
                <td class="txt_bold" style="font-size:16px;">
                    @Model.Field8
