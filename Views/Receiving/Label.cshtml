                    @Model.Field7
                </td>
            </tr>
        </tbody>
    </table>
    <table width='100%' style="margin-left:-50px;margin-top:-10px;">
        <tbody>
            <tr>
                <td>
                    <img style="width: 100px; height: 100px;" src="@Model.Field6" />
                </td>
                <td>
                    <table width='100%'>
                        <tbody>
                            <tr>
                                <td align="center" valign="middle" class="txt_bold" style="font-size:14px;">
                                    <span>@Model.Field9</span>
                                    <span>@Model.Field10</span>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <table width='100%' style="font-size:15px;margin-left:-10px;">
                                        <tbody>
                                            <tr>
                                                <td align="right">@Model.Field12</td>
